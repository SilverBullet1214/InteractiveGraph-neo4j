<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="org.interactivegraph.server"/>

    <bean class="org.interactivegraph.server.commands.Neo4jConnector">
        <property name="boltUrl" value="bolt://localhost:7687"/>
        <property name="boltUser" value="neo4j"/>
        <property name="boltPassword" value="neoneo"/>
    </bean>

    <bean class="org.interactivegraph.server.commands.Neo4jGraphMetaDBInMemory">
        <property name="captionExpr" value="${prop.name}"/>
        <property name="titleExpr" value="${prop.name}"/>
        <property name="photoURLExpr" value="http://localhost:8088/photos/byname/${prop.name}.jpg"/>
    </bean>

    <bean class="org.interactivegraph.server.DefaultCommandRegistry">
        <property name="commandsMap">
            <map>
                <entry key="init">
                    <bean class="org.interactivegraph.server.commands.LazyCommandFromFile">
                        <property name="source" value="./WEB-INF/cmd_init.json"/>
                    </bean>
                </entry>
                <entry key="loadAll">
                    <!--
                    <bean class="org.graphviz.server.commands.LazyCommandFromFile">
                        <property name="source" value="./WEB-INF/cmd_loadAll.json"/>
                    </bean>
                    -->
                    <bean class="org.interactivegraph.server.commands.LoadGraphFromNeo4jServer"/>
                </entry>
            </map>
        </property>
    </bean>
</beans>